<% provide(:title, 'All users') %>
<h1 class="welcome">User Directory</h1>

<ul>
  <% @users.each do |user| %>
    <li class="username">
			<%= link_to "#{user.fName} #{user.lName}", user, remote: true%>
			<% if current_user?(user) %>
			    | <%= link_to "Delete my Account", user, method: :delete,
			                                  data: { confirm: "Are you sure?" } %>
			  <% end %>
    </li>
  <% end %>
</ul>

