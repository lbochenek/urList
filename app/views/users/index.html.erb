<% provide(:title, 'All users') %>
<h1>Profile Directory</h1>

<ul>
  <% @users.each do |user| %>
    <li>
			<%= link_to "#{user.fName} #{user.lName}", user %>
			<% if current_user?(user) %>
			    | <%= link_to "Delete", user, method: :delete,
			                                  data: { confirm: "Are you sure?" } %>
			  <% end %>
    </li>
  <% end %>
</ul>

