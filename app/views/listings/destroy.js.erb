// used http://edgeguides.rubyonrails.org/working_with_javascript_in_rails.html and http://stackoverflow.com/questions/17258175/using-ajax-to-remove-an-item-without-refreshing-the-page

$(document).ready(function() {
  $(function() {
    return $("a[data-remote]").on("ajax:success", function(e, data, status, xhr) {
       $(this).closest('li').remove();
     });
   });
});   
