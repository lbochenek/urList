<div id="post-form">

<%= form_for(@listing, remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="post-input">
		<h3 class="page-head">Make a new listing!</h3>
    <%= f.text_field :title, placeholder: "What are you selling?", class: "field-text" %>
		<br><span class="title-error"> Please enter a title! </span><br>
		
		<%= f.text_field :price, placeholder: "$", class: "field-text"%> 
		<br><span class="price-error"> Price must be a number, or blank </span><br>
		
		<%= f.text_area :content, placeholder: "More info...", id: "listing-content"%> 
		<br><span class="content-error"> Please enter at least 15 characters </span><br>
		<span class="field-text"> Pick a category </span>
		<%= f.collection_select :type_id, Type.all, :id, :category %>

		<br>
  </div>
  <%= f.submit "Post", class: "post", id: "post-submit"%>
<% end %>

</div>
<!-- SEARCH BAR HERE-->
<form id="live-search" action="" class="search-bar" method="post">
    <fieldset>
        <input type="text" class="text-input" id="filter" value="" placeholder="Type to search listings..." />
        <span id="filter-count"></span>
    </fieldset>
		<input type="reset" value="Clear Search" id="clear">
	</form>
	
  <%= render partial: 'layouts/categories' %>
	
